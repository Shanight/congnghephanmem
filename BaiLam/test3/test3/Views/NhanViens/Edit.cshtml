@model test3.Models.NhanVien

@{
  ViewData["Title"] = "Edit";
  Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<main id="main" class="main">

  <div class="pagetitle">
    <h1>Sửa nhân viên</h1>
    <nav>
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="index.html">Home</a></li>
        <li class="breadcrumb-item active">Nhân viên</li>
      </ol>
    </nav>
  </div><!-- End Page Title -->

  <section class="section">
    <div class="row">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Sửa nhân viên</h5>

          <!-- Multi Columns Form -->
          <form class="row g-3" asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <span asp-validation-for="Id" class="text-danger"></span>
            <div class="col-md-6">
              <label asp-for="TenNV" class="form-label">Tên nhân viên</label>
              <input asp-for="TenNV" class="form-control" />
              <span asp-validation-for="TenNV" class="text-danger"></span>
            </div>
            <div class="col-md-6">
              <label asp-for="GioiTinh" class="form-label">Giới tính</label>
              <select asp-for="GioiTinh" class="form-control">
                <option value="Nam">Nam</option>
                <option value="Nữ">Nữ</option>
              </select>
              <span asp-validation-for="GioiTinh" class="text-danger"></span>
            </div>
            <div class="col-md-6">
              <label asp-for="NgaySinh" class="form-label">Ngày sinh</label>
              <input asp-for="NgaySinh" class="form-control" type="date" />
              <span asp-validation-for="NgaySinh" class="text-danger"></span>
            </div>
            <div class="col-md-6">
              <label asp-for="TinhTrang" class="form-label">Tình trạng</label>
              <select asp-for="TinhTrang" class="form-control">
                <option value="Đang làm">Đang làm</option>
                <option value="Đã nghỉ">Đã nghỉ</option>
              </select>
              <span asp-validation-for="TinhTrang" class="text-danger"></span>
            </div>
            <div class="col-md-6">
              <label asp-for="AnhDaiDien" class="form-label">Ảnh đại diện</label>
              <input asp-for="AnhDaiDien" style="display: none;">
              <input class="form-control" name="photo" type="file" accept="image/*" />
              <span asp-validation-for="AnhDaiDien" class="text-danger"></span>
            </div>
            <div class="col-md-6">

              <div>
                <img src="@Url.Content(Model.AnhDaiDien)" alt="AnhDaiDien" class="img-thumbnail"
                  style="max-width: 200px;" />
              </div>

            </div>
            <div class="col-md-12">
              <label asp-for="DiaChi" class="form-label">Địa chỉ</label>
              <input asp-for="DiaChi" class="form-control" />
              <span asp-validation-for="DiaChi" class="text-danger"></span>
            </div>
            <div class="col-md-6">
              <label asp-for="SDT" class="form-label">Số điện thoại</label>
              <input asp-for="SDT" class="form-control" type="tel" />
              <span asp-validation-for="SDT" class="text-danger"></span>
            </div>
            <div class="col-md-6">
              <label asp-for="Email" class="form-label">Email</label>
              <input asp-for="Email" class="form-control" type="email" />
              <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="col-md-6">
              <label asp-for="NgayVaoLam" class="form-label">Ngày vào làm</label>
              <input asp-for="NgayVaoLam" class="form-control" type="date" />
              <span asp-validation-for="NgayVaoLam" class="text-danger"></span>
            </div>
            <div class="col-md-6">
              <label asp-for="MucLuong" class="form-label">Mức lương</label>
              <input asp-for="MucLuong" class="form-control" type="number" step="100000" min="1000000" />
              <span asp-validation-for="MucLuong" class="text-danger"></span>
            </div>
            <div class="col-md-6">
              <label asp-for="ViTri" class="form-label">Vị trí</label>
              <select asp-for="ViTri" class="form-control">
                <option value="Nhân viên">Nhân viên</option>
                <option value="Quản lý">Quản lý</option>
              </select>
              <span asp-validation-for="ViTri" class="text-danger"></span>
            </div>


            <div class="text-center">
              <button type="submit" class="btn btn-primary">Lưu</button>
              <a asp-action="Index">
                <button class="btn btn-secondary">Thoát</button>
              </a>

            </div>
          </form> <!-- End Multi Columns Form -->

        </div>
      </div>
    </div>
  </section>

</main>

@section Scripts {
  @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
  }
}

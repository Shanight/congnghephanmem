@model IEnumerable<test3.Models.NhanVien>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<main id="main" class="main">

        <div class="pagetitle">
            <h1>Nhân viên</h1>
            <nav>
                <ol class="breadcrumb" >
                    <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                    <li class="breadcrumb-item">Quản lý</li>
                    <li class="breadcrumb-item active">Nhân viên</li>
                </ol>
                <nav style="text-align: right;">
                    <a asp-action="Create">
                    <button type="button" class="btn btn-info">+ Thêm</button>
                </a>
                </nav>
            </nav>
        </div><!-- End Page Title -->

        <section class="section">
            <div class="row">
                <div class="col-12">
                    <div class="card recent-sales overflow-auto">
                        <div class="card-body">
                            <table class="table table-borderless datatable">
                                <thead>
                                    <tr>
                                        <th scope="col">ID</th>
                                        <th scope="col">Tên nhân viên</th>
                                        <th scope="col">Giới tính</th>
                                        <th scope="col">Ngày sinh</th>
                                        <th scope="col">Địa chỉ</th>
                                        <th scope="col">Số Điện Thoại</th>
                                        <th scope="col">Email</th>
                                        <th scope="col">Ngày vào làm</th>
                                        <th scope="col">Lương/tháng</th>
                                        <th scope="col">Tình trạng</th>
                                        <th>Chi tiết</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                {
                                    <tr>
                                        <th scope="row"><a href="#">1</a></th>
                                        <td>@Html.DisplayFor(modelItem => item.TenNV)</td>
                                        <td>@Html.DisplayFor(modelItem => item.GioiTinh)</td>
                                        <td>@Html.DisplayFor(modelItem => item.NgaySinh)</td>
                                        <td>@Html.DisplayNameFor(model => model.AnhDaiDien)</td>
                                        <td>@Html.DisplayFor(modelItem => item.DiaChi)</td>
                                        <td>@Html.DisplayNameFor(model => model.SDT)</td>
                                        <td>@Html.DisplayNameFor(model => model.Email)</td>
                                        <td>@Html.DisplayNameFor(model => model.NgayVaoLam)</td>
                                        <td>@Html.DisplayFor(modelItem => item.MucLuong)</td>
                                        <td>@Html.DisplayFor(modelItem => item.TinhTrang)</td>
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@item.Id" style="color: white">
                                            <button type="button" class="btn btn-success">
                                                    <i class="bi bi-book"></i>
                                            </button>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id">
                                                <button type="button" class="btn btn-danger">
                                                X
                                            </button>
                                            </a>
                                        </td>
                                    </tr>
                                }
                                    <script>
                                        function deleteRow(button) {
                                            // Traversing để tìm hàng <tr> chứa nút bấm
                                            var row = button.closest('tr');
                                    
                                            // Xóa hàng
                                            row.remove();
                                        }
                                    </script>


                                </tbody>
                            </table>

                        </div>

                    </div>
                </div><!-- End Recent Sales -->
            </div>
        </section>
        
        <script>
            function deleteRow(button) {
                // Traversing để tìm hàng <tr> chứa nút bấm

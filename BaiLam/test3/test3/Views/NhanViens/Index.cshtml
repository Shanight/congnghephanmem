@model IEnumerable<test3.Models.NhanVien>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml"; int count = 1;

}


<main id="main" class="main">

    <div class="pagetitle">
        <h1>Nhân viên</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                <li class="breadcrumb-item">Quản lý</li>
                <li class="breadcrumb-item active">Nhân viên</li>
            </ol>
            <nav style="text-align: right;">
                <a asp-action="Create">
                    <button type="button" class="btn btn-info">+ Thêm</button>
                </a>
            </nav>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-12">
                <div class="card recent-sales overflow-auto">
                    <div class="card-body">
                        <table class="table table-borderless datatable">
                            <thead>
                                <tr>
                                    <th scope="col">ID</th>
                                    <th scope="col">Tên nhân viên</th>
                                    <th scope="col">Giới tính</th>
                                    <th scope="col">Ngày sinh</th>
                                    <th scope="col">Vị trí</th>
                                    <th scope="col">Lương/tháng</th>
                                    <th scope="col">Tình trạng</th>
                                    <th>Chi tiết</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <th scope="row">@count</th>
                                        <td>@Html.DisplayFor(modelItem => item.TenNV)</td>
                                        <td>@Html.DisplayFor(modelItem => item.GioiTinh)</td>
                                        <td>@Html.DisplayFor(modelItem => item.NgaySinh)</td>
                                        <td>@Html.DisplayNameFor(model => model.ViTri)</td>
                                        <td>@Html.DisplayFor(modelItem => item.MucLuong)đ</td>
                                        <td>
                                            @if (item.TinhTrang == "Đang làm")
                                            {
                                                <span class="badge bg-success">@Html.DisplayFor(modelItem =>
                                            item.TinhTrang)</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">@Html.DisplayFor(modelItem =>
                                            item.TinhTrang)</span>
                                            }
                                        </td>
                                        <td>
                                            <a asp-action="Details" asp-route-id="@item.Id" style="color: white">
                                                <button type="button" class="btn btn-primary">
                                                    <i class="bi bi-book"></i>
                                                </button>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.Id" style="color:white">
                                                <button type="button" class="btn btn-success">
                                                    <i class="bi bi-pen"></i>
                                                </button>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id">
                                                <button type="button" class="btn btn-danger">
                                                    X
                                                </button>
                                            </a>
                                        </td>
                                    </tr>
                                    count++;
                                }
                                <script>
                                    function deleteRow(button) {
                                        // Traversing để tìm hàng <tr> chứa nút bấm
                                        var row = button.closest('tr');

                                        // Xóa hàng
                                        row.remove();
                                    }
                                </script>


                            </tbody>
                        </table>

                    </div>

                </div>
            </div><!-- End Recent Sales -->
        </div>
    </section>

    <script>
        function deleteRow(button) {
            // Traversing để tìm hàng <tr> chứa nút bấm
            var row = button.closest('tr');
            // Xóa hàng
            row.remove();
        }
    </script>


</main>

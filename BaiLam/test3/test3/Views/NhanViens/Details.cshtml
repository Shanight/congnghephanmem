@model test3.Models.NhanVien

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<main id="main" class="main">

    <div class="pagetitle">
        <h1>Nhân viên</h1>
        <nav>
            <ol class="breadcrumb" style="width: 100%;">
                <li class="breadcrumb-item"><a asp-action="Index">Home</a></li>
                <li class="breadcrumb-item">Quản lý</li>
                <li class="breadcrumb-item active">Nhân viên</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->
    <section class="section profile">
        <div class="row">
            <div class="col-xl-4">

                <div class="card">
                    <div class="card-body profile-card pt-4 d-flex flex-column align-items-center">

                        <div style="width: 120px; height: 120px; border-radius: 50%; overflow: hidden;">
                            <img src="@Html.DisplayFor(model => model.AnhDaiDien)" alt="Profile"
                                style="object-fit: cover; width: 120%; height: 120%;">
                        </div>
                        <h2>@Html.DisplayFor(model => model.TenNV)</h2>
                        <h3>@Html.DisplayFor(model => model.ViTri)</h3>
                        <div class="social-links mt-2">
                            <a href="#" class="twitter"><i class="bi bi-twitter"></i></a>
                            <a href="#" class="facebook"><i class="bi bi-facebook"></i></a>
                            <a href="#" class="instagram"><i class="bi bi-instagram"></i></a>
                            <a href="#" class="linkedin"><i class="bi bi-linkedin"></i></a>
                        </div>
                    </div>
                </div>

            </div>

            <div class="col-xl-8">

                <div class="card">
                    <div class="card-body pt-3">
                        <!-- Bordered Tabs -->
                        <ul class="nav nav-tabs nav-tabs-bordered">

                            <li class="nav-item">
                                <button class="nav-link active" data-bs-toggle="tab"
                                    data-bs-target="#profile-overview">Chi tiết</button>
                            </li>
                        </ul>
                        <div class="tab-content pt-2">

                            <div class="tab-pane fade show active profile-overview" id="profile-overview">

                                <h5 class="card-title">Thông tin</h5>

                                <div class="row">
                                    <div class="col-lg-3 col-md-4 label ">Họ và tên</div>
                                    <div class="col-lg-9 col-md-8">@Html.DisplayFor(model => model.TenNV)</div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-3 col-md-4 label">Giới tính</div>
                                    <div class="col-lg-9 col-md-8">@Html.DisplayFor(model => model.GioiTinh)</div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-3 col-md-4 label">Ngày sinh</div>
                                    <div class="col-lg-9 col-md-8">@Html.DisplayFor(model => model.NgaySinh)</div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-3 col-md-4 label">Số điện thoại</div>
                                    <div class="col-lg-9 col-md-8">@Html.DisplayFor(model => model.SDT)</div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-3 col-md-4 label">Email</div>
                                    <div class="col-lg-9 col-md-8">@Html.DisplayFor(model => model.Email)</div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-3 col-md-4 label">Vị trí</div>
                                    <div class="col-lg-9 col-md-8">@Html.DisplayFor(model => model.ViTri)</div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-3 col-md-4 label">Ngày vào làm</div>
                                    <div class="col-lg-9 col-md-8">@Html.DisplayFor(model => model.NgayVaoLam)</div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-3 col-md-4 label">Mức lương</div>
                                    <div class="col-lg-9 col-md-8">@Html.DisplayFor(model => model.MucLuong)đ</div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-3 col-md-4 label">Tình trạng</div>
                                    <div class="col-lg-9 col-md-8">
                                        @if (Model.TinhTrang == "Đang làm")
                                        {
                                            <span class="badge bg-success">@Html.DisplayFor(model => model.TinhTrang)</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">@Html.DisplayFor(model => model.TinhTrang)</span>
                                        }
                                    </div>
                                </div>

                            </div>


                        </div><!-- End Bordered Tabs -->

                    </div>
                </div>

            </div>
        </div>
    </section>
</main>






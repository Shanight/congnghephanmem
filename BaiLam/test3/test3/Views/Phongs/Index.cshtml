@model IEnumerable<test3.Models.Phong>

@{
    ViewData["Title"] = "Index";
        Layout = "~/Views/Shared/_AdminLayout.cshtml";

}

<main id="main" class="main">

    <div class="pagetitle">
        <h1>Phòng</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                <li class="breadcrumb-item active">Phòng</li>
            </ol>
            <nav style="text-align: right;">
                <a asp-action="Create">
                    <button type="button" class="btn btn-info" style=""> + Thêm</button>
                </a>
            </nav>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-12">
                <div class="card recent-sales overflow-auto">
                    <div class="card-body">
                        <table class="table table-borderless datatable">
                            <thead>
                                <tr>
                                    <th scope="col">ID phòng</th>
                                    <th scope="col">Tên phòng</th>
                                    <th scope="col">Hạng phòng</th>
                                    <th scope="col">Giá/giờ</th>
                                    <th scope="col">Tình trạng</th>
                                    <th>Chi tiết</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <th scope="row"><a href="#">@Html.DisplayFor(modelItem => item.SoPhong)</a></th>
                                        <td>@Html.DisplayFor(modelItem => item.TenPhong)</td>
                                        <td>@Html.DisplayFor(modelItem => item.HangPhong)</td>
                                        <td>$@Html.DisplayFor(modelItem => item.GiaPhong)</td>
                                        <td><span class="badge bg-success">@Html.DisplayFor(modelItem =>
                                            item.TrangThai)</span></td>
                                        <td>
                                            <button type="button" class="btn btn-success">
                                                <a asp-action="Edit" asp-route-id="@item.Id" style="color:white">
                                                    <i class="bi bi-pen"></i>
                                                </a>
                                            </button>
                                            <button type="button" class="btn btn-danger">
                                                <a asp-action="Delete" asp-route-id="@item.Id">X</a>

                                            </button>
                                        </td>
                                    </tr>
                                }

        

                            </tbody>
                        </table>

                    </div>

                </div>
            </div><!-- End Recent Sales -->
        </div>
    </section>

</main>

<h1>Index</h1>

<p>
    <a >Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TenPhong)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HangPhong)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GiaPhong)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrangThai)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TenPhong)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HangPhong)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GiaPhong)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TrangThai)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>